<div class="row">

	<div class="col-md-4">

		<%= image_tag @story.story_img.url(:story_show), class: "story-show" %>

	</div>

	<div class="col-md-8">

		<div class="story-info">

			<h2 class="news-headline"><%= @story.title %></h2>
			<h3 class="story-writer"><span>From</span> <%= @story.author %></h3>
			<h2 class="avg-rating">Average Rating</h2>
			<div class="average-review-rating" data-score=<%= @average_review %>></div>
			<span class="number-of-reviews">Based on <%= @story.reviews.count %> reviews</span>
			<p class="story-desc"><%= @story.description %></p>

		</div>
	</div>


</div>

<div class="row">

	<div class="col-md-4">

		<div class="reviews">

			<!-- Where the reviews/ratings will go -->
			<h1>Reviews</h1>
			<%= render @story.reviews %>

			<div>
				<%= link_to "Add Review", new_story_review_path(@story), class: "btn-custom" %>
			</div>

		</div>	

	</div>

</div>

<div class="links btn-group">

	<%= link_to "Back", root_path, class: "btn btn-custom" %>

	<% if user_signed_in? %>

		<% if @story.user_id == current_user.id %>

			<%= link_to "Edit", edit_story_path(@story), class: "btn btn-custom" %>
			<%= link_to "Delete", story_path(@story), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

		<% end %>

	<% end %>	

</div>	


<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>


<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>