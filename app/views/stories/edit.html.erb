<div class="col-md-6 col-md-offset-3">

	<div class="edit-story-form">

		<h1>Edit Story</h1>

		<%= simple_form_for @story, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :story_img %>
			<%= f.input :headline, label: "Headline Title" %>
	        <%= f.input :summary %>
        	<%= f.input :writer %>
	        <%= f.input :url %>
	        <%= f.button :submit, :class => 'btn-custom2' %>
		<% end %>

	</div>

</div>


	